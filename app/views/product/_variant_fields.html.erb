<div class="form-group row">
  <%= f.label :sku, class: "col-sm-2 col-form-label"%>
  <div class="col-sm-10">
    <%= f.text_field :sku, class: "form-control" %>
  </div>
</div>


<div class="form-group row">
  <%= f.label :quantity, class: "col-sm-2 col-form-label"%>
  <div class="col-sm-10">
    <%= f.text_field :quantity, class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :price, class: "col-sm-2 col-form-label"%>
  <div class="col-sm-10">
    <%= f.text_field :price, class: "form-control" %>
  </div>
</div>


<% Option.all.each do |op| %>
  <div class="form-group row">
    <%= f.label op.name, class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= f.collection_check_boxes(:option_value_ids, op.option_values, :id, :name) %>
    </div>
  </div>
<% end %>
<hr>
