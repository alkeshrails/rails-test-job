<%= form_for product, url: {action: "create"} do |f| %>
  <div class="container pt-2">
    <div class="form-group row">
      <%= f.label :title, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :description, class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>

    <%= f.fields_for :variants do |variant_form| %>
      <% render 'product/variant_fields', f: variant_form %>
    <% end %>

    <%= link_to_add_fields "Add Variant", f, :variants %>

    <div class="form-group row">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
